{
    "name": "mystenlab-site",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint -d ./src && npm run prettier:check && npm run stylelint:check",
        "lint:fix": "next lint -d ./src --fix && npm run prettier:fix && npm run stylelint:fix",
        "export": "npm run build && next export",
        "prettier:check": "prettier -c --ignore-unknown .",
        "prettier:fix": "prettier -w --ignore-unknown .",
        "prettier:fix:watch": "npm run prettier:fix && onchange '**' --exclude-path .gitignore -- prettier -w --ignore-unknown {{file}}",
        "stylelint:check": "stylelint \"**/*.{css,scss}\"",
        "stylelint:fix": "npm run stylelint:check -- --fix"
    },
    "dependencies": {
        "@restart/ui": "^1.0.2",
        "classnames": "^2.3.1",
        "next": "12.1.0",
        "query-string": "^7.1.1",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@types/node": "17.0.21",
        "@types/react": "17.0.40",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "eslint": "^8.11.0",
        "eslint-config-next": "12.1.0",
        "eslint-config-prettier": "^8.5.0",
        "onchange": "^7.1.0",
        "prettier": "^2.5.1",
        "sass": "^1.49.9",
        "stylelint": "^14.5.3",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "typescript": "^4.6.2"
    }
}
