{
    "hosting": {
        "public": "./out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "/api/subscribe",
                "function": "emailSubscribe"
            }
        ]
    },
    "functions": {
        "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
    }
}
